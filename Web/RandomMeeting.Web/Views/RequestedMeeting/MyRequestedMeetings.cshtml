@using RandomMeeting.Web.ViewModels.RequestedMeetings
@model IEnumerable<RequestedMeetingViewModel>

<h1 class="row justify-content-center" style="font-family: 'Comic Sans MS'">My requested meetings</h1>

<div class="row justify-content-center" style="font-family: 'Comic Sans MS'">
    <div class="container-fluid ml-5 text-center">
        <table class="table table-hover">
            <thead>
                <tr class="row">
                    <th scope="col" class="col-lg-2">Desired gender</th>
                    <th scope="col" class="col-lg-2">Desired age group</th>
                    <th scope="col" class="col-lg-2"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var meetingModel in Model)
                {
                    <tr class="row">
                        <td class="col-lg-2">@meetingModel.DesiredGender</td>
                        <td class="col-lg-2">@meetingModel.DesiredAgeGroup</td>
                        <td class="col-lg-2">
                            <div class="button-holder">
                                <a asp-controller="FormedMeeting" asp-action="Generate" asp-route-id="@meetingModel.Id" class="btn btn-primary">Search for a partner</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>