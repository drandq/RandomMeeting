@using RandomMeeting.Web.ViewModels.FormedMeetings
@model IEnumerable<FormedMeetingViewModel>

<h1 class="row justify-content-center" style="font-family: 'Comic Sans MS'">My formed meetings</h1>

<div class="row justify-content-center" style="font-family: 'Comic Sans MS'">
    <div class="container-fluid ml-5 text-center">
        <table class="table table-hover">
            <thead>
                <tr class="row">
                    <th scope="col" class="col-lg-2">Person 1</th>
                    <th scope="col" class="col-lg-2">Person 2</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var meetingModel in Model)
                {
                    <tr class="row">
                        <td class="col-lg-2">@meetingModel.FirstUserNumber</td>
                        <td class="col-lg-2">@meetingModel.SecondUserNumber</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
