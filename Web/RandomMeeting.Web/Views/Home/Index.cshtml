@if (!this.User.Identity.IsAuthenticated)
{
    <div class="container-fluid text-center">
        <div style="color: darkslateblue; font-family: 'Comic Sans MS'">
            <h1>Welcome to Random meeting!</h1>
            <h4 class="font-italic">We hope you enjoy meeting random people!</h4>
        </div>
        <div class="btn-group-lg dropright mt-3 mb-3">
            <button class="btn btn-outline-secondary font-weight-bolder dropdown-toggle-split" type="button" data-toggle="dropdown" style="font-size:x-large">
                Login/Register
            </button>
            <div class="dropdown-menu btn-lg" style="background-color:darksalmon">
                <a class="dropdown-item text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </div>
        </div>
        <div id="homeCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#homeCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#homeCarousel" data-slide-to="1"></li>
                <li data-target="#homeCarousel" data-slide-to="2"></li>
                <li data-target="#homeCarousel" data-slide-to="3"></li>
                <li data-target="#homeCarousel" data-slide-to="4"></li>
                <li data-target="#homeCarousel" data-slide-to="5"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/pesho-and-maria.jpg" alt="First slide" height="400">
                    <div class="carousel-caption d-none d-md-block" style="color: darkgreen; background-color: darkkhaki">
                        <h4>Petar and Maria met randomly</h4>
                        <h5>Five years later, we can see a wonderful couple!</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/penka-and-stanka.jpg" alt="Second slide" height="400">
                    <div class="carousel-caption d-none d-md-block" style="color: darkgreen; background-color: darkkhaki">
                        <h4>Penka and Stanka met randomly</h4>
                        <h5>Now they are best friends!</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/jinny-and-amy.jpg" alt="Fourth slide" height="400">
                    <div class="carousel-caption d-none d-md-block" style="color: darkgreen; background-color: darkkhaki">
                        <h4>Jinny and Amy met randomly</h4>
                        <h5>They studied at the same university and had never seen each other before!</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/mary-and-dexter.jpg" alt="Fourth slide" height="400">
                    <div class="carousel-caption d-none d-md-block" style="color: darkgreen; background-color: darkkhaki">
                        <h4>Mary and Dexter met randomly</h4>
                        <h5>What a satisfying night that was!</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/old-tom-and-little-tom.jpg" alt="Fifth slide" height="400">
                    <div class="carousel-caption d-none d-md-block" style="color: darkgreen; background-color: darkkhaki">
                        <h4>Tom and Tom met randomly</h4>
                        <h5>It turned out the name was not the only thing they shared!</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/georgi-and-petar.jpg" alt="Sixth slide" height="400">
                    <div class="carousel-caption d-none d-md-block" style="color: darkgreen; background-color: darkkhaki">
                        <h4>Georgi and Petar met randomly</h4>
                        <h5>They watch football together every weekend!</h5>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#homeCarousel" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#homeCarousel" data-slide="next">
                <span class="carousel-control-next-icon"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
}
else
{
    <div class="row justify-content-center">
        <div class="container-fluid text-center">
            <img src="~/welcome.jpg" width="500" height="400" />
        </div>
    </div>
}
